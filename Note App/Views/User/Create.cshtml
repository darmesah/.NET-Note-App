@model User

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Account</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name"></label>
			<input name="name" asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Email"></label>
			<input name="email" asp-for="Email" type="email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create Account</button>
			</div>
		</div>
	</div>
</form>