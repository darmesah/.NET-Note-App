@model List<Note>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="table-primary">Notes List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Add" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Note
			</a>
		</div>
	</div>
	<hr/>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Note ID
				</th>
				<th>
					Note Title
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="py-3">
					@item.Id
				</td>
				<td class="py-3">
					@item.Title
				</td>
				<td class="py-3">
					<a class="h6" asp-controller="Note" asp-action="." asp-route-id="@item.Id">View Note</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>