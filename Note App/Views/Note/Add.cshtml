@model Note

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Note</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Content"></label>
			<textarea asp-for="Content" class="form-control" rows="6"> </textarea>
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="UserId"></label>
			<input asp-for="UserId" class="form-control" />
			<span asp-validation-for="UserId" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn px-2 pt-2 btn-primary form-control">Create Note</button>
			</div>
			<div class="col-6 col-md-4">
				<a asp-action="" class="btn px-2 pt-2 btn-secondary border form-control">Back to Notes</a>
			</div>
		</div>
	</div>
</form>